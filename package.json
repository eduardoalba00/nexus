{
  "name": "nexus",
  "private": true,
  "packageManager": "pnpm@9.11.0",
  "scripts": {
    "dev:server": "pnpm --filter @nexus/server dev",
    "dev:client": "pnpm --filter @nexus/client dev",
    "build:server": "pnpm --filter @nexus/server build",
    "build:client": "pnpm --filter @nexus/client build",
    "dev:client2": "cross-env NEXUS_INSTANCE=2 pnpm --filter @nexus/client dev",
    "db:generate": "pnpm --filter @nexus/server db:generate",
    "db:migrate": "pnpm --filter @nexus/server db:migrate"
  },
  "dependencies": {
    "electron": "^40.2.1"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "cross-env": "^10.1.0"
  }
}
